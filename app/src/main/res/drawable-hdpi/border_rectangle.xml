<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- Makes background clear -->
    <solid
        android:color="#00000000" >
    </solid>

    <!-- Black border -->
    <stroke
        android:width="3dp"
        android:color="#000000" >
    </stroke>

    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>

    <!-- Rounds corners slightly -->
    <corners
        android:radius="1dp"   >
    </corners>

</shape>